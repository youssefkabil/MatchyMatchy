<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/navbar_background"
            android:elevation="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MatchyMatchy"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <ImageButton
                android:id="@+id/buttonRecentBooks"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_book_recent"
                android:background="@drawable/circular_button"
                android:layout_marginEnd="8dp"
                android:contentDescription="Recent Books" />

            <ImageButton
                android:id="@+id/buttonLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logout"
                android:background="@drawable/circular_button"
                android:contentDescription="Logout" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Welcome Section -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_book_heart"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MatchyMatchy"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover your perfect book match! ðŸ“šâœ¨\nTake our personality quiz and let us find the book that speaks to your soul."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:alpha="0.9"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/textViewUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:layout_marginBottom="40dp" />

            <!-- Start Quiz Button -->
            <Button
                android:id="@+id/buttonStartQuiz"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Personality Quiz"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/quiz_button_background"
                android:elevation="8dp"
                android:layout_marginBottom="48dp" />

            <!-- Books Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Books"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <!-- Books RecyclerView placeholder - we'll use LinearLayout for simplicity -->
            <LinearLayout
                android:id="@+id/layoutBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>